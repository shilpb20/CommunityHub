@model CommunityHub.Core.Dtos.RegistrationRequestDto

<div class="col-4">
<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2" class="text-center" style="border-top: 2px solid #dee2e6; border-bottom: 2px solid #dee2e6;">
                User Details
            </th>
        </tr>
    </thead>
    <tbody>
        @if (!string.IsNullOrEmpty(Model.RegistrationData.UserDetails.Email))
        {
            <tr>
                <td><strong>Email:</strong></td>
                <td>@Model.RegistrationData.UserDetails.Email</td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.RegistrationData.UserDetails.ContactNumber))
        {
            <tr>
                <td><strong>Contact:</strong></td>
                <td>@Model.RegistrationData.UserDetails.CountryCode - @Model.RegistrationData.UserDetails.ContactNumber</td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.RegistrationData.UserDetails.Gender))
        {
            <tr>
                <td><strong>Gender:</strong></td>
                <td>@Model.RegistrationData.UserDetails.Gender</td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.RegistrationData.UserDetails.MaritalStatus))
        {
            <tr>
                <td><strong>Marital Status:</strong></td>
                <td>@Model.RegistrationData.UserDetails.MaritalStatus</td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.RegistrationData.UserDetails.HomeTown))
        {
            <tr>
                <td><strong>Home Town:</strong></td>
                <td>@Model.RegistrationData.UserDetails.HomeTown</td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.RegistrationData.UserDetails.HouseName))
        {
            <tr>
                <td><strong>House Name:</strong></td>
                <td>@Model.RegistrationData.UserDetails.HouseName</td>
            </tr>
        }
    </tbody>
</table>
</div>