@model CommunityHub.Core.Dtos.RegistrationInfoCreateDto

<div class="col-md-6">
    <div class="card mt-4">
        <div class="card-header">
            <h4>Children</h4>
        </div>
        <div class="card-body">
            <!-- Add Child Button -->
            <div class="form-group row mb-2">
                <div class="col-md-12 d-flex justify-content-end">
                    <button type="button" class="btn btn-primary" id="btnAddChild">Add Child</button>
                </div>
            </div>

            <div id="childInputSection" style="display: none;">
                <div class="form-group row mb-2 d-flex align-items-start">
                    <label for="childNameInput" class="col-md-2 col-form-label">Child's Name</label>

                    <!-- Make the input field longer by using col-md-6 -->
                    <div class="col-md-6">
                        <input type="text" class="form-control" id="childNameInput" placeholder="Enter child's name" />
                    </div>

                    <!-- Align buttons properly, and adjust width if needed -->
                    <div class="col-md-4 d-flex justify-content-end">
                        <button type="button" class="btn btn-success me-2" id="btnSaveChild">Save</button>
                        <button type="button" class="btn btn-secondary me-2" id="btnCancelChild">Cancel</button>
                    </div>
                </div>
            </div>

            <div id="duplicateErrorMessage" class="alert alert-danger" style="display: none;">
                Child name has already been added!
            </div>

            <!-- List of Children -->
            <div id="childrenListSection">
                <ul id="childrenList" class="list-group mt-3">
                    @if (Model?.Children != null && Model.Children.Any())
                    {
                        foreach (var child in Model.Children)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@child.Name</span>
                                <input type="hidden" name="Children" value="@child.Name" />
                                <button type="button" class="btn btn-danger btn-sm btnDeleteChild">Delete</button>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
