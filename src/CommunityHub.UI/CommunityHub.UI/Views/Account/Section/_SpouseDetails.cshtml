@using CommunityHub.Core.Dtos
@model CommunityHub.Core.Dtos.RegistrationDataCreateDto

@{
    bool isSpousePresent = Model?.UserDetails.MaritalStatus == "Married";
    if (!isSpousePresent) { Model.SpouseDetails = null; }
}

<div class="col-md-6">
    <div class="card mt-4" id="spouseSection" style="@(isSpousePresent ? "" : "display:none;")">
        <div class="card-header">
            <h4>Spouse Details</h4>
        </div>
        <div class="card-body">
            <!-- Spouse Full Name -->
            <div class="form-group row mb-2">
                <label for="SpouseFullName" class="col-md-4 col-form-label">Full Name</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="SpouseFullName" asp-for="SpouseDetails.FullName" />
                </div>
            </div>

            <!-- Spouse Email -->
            <div class="form-group row mb-2">
                <label for="SpouseEmail" class="col-md-4 col-form-label">Email</label>
                <div class="col-md-8">
                    <input type="email" class="form-control" id="SpouseEmail" asp-for="SpouseDetails.Email" />
                </div>
            </div>

            <!-- Country Code & Contact Number -->
            <div class="form-group row mb-2">
                <label for="CountryCode" class="col-md-4 col-form-label">Country Code</label>
                <div class="col-md-4">
                    <select class="form-select" id="CountryCode" asp-for="SpouseDetails.CountryCode">
                        <option value=""></option>
                        <option value="+61">AU</option>
                        <option value="+64">NZ</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="ContactNumber" asp-for="SpouseDetails.ContactNumber" />
                </div>
            </div>

            <!-- Spouse Home Town -->
            <div class="form-group row mb-2">
                <label for="SpouseHomeTown" class="col-md-4 col-form-label">Home Town</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="SpouseHomeTown" asp-for="SpouseDetails.HomeTown" />
                </div>
            </div>

            <!-- Spouse House Name -->
            <div class="form-group row mb-2">
                <label for="SpouseHouseName" class="col-md-4 col-form-label">House Name</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="SpouseHouseName" asp-for="SpouseDetails.HouseName" />
                </div>
            </div>
        </div>
    </div>
</div>
