@using CommunityHub.Core.Dtos
@model CommunityHub.Core.Dtos.RegistrationInfoCreateDto

@{
    var User = Model?.UserInfo ?? new UserInfoCreateDto();
}

<div class="col-md-6">
    <div class="card mt-3">
        <div class="card-header">
            <h4>Primary Member Details</h4>
        </div>
        <div class="card-body">
            <!-- Full Name -->
            <div class="form-group row mb-2">
                <label for="FullName" class="col-md-4 col-form-label">Full Name</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="FullName" asp-for="UserInfo.FullName" value="@User?.FullName" />
                </div>
            </div>

            <!-- Email -->
            <div class="form-group row mb-2">
                <label for="Email" class="col-md-4 col-form-label">Email</label>
                <div class="col-md-8">
                    <input type="email" class="form-control" id="Email" asp-for="UserInfo.Email" value="@User?.Email" />
                </div>
            </div>

            <!-- Country Code -->
            <div class="form-group row mb-2">
                <label for="CountryCode" class="col-md-4 col-form-label">Country Code</label>
                <div class="col-md-4">
                    <select class="form-select" id="CountryCode" asp-for="UserInfo.CountryCode">
                        <option value=""></option>
                        <option value="+61">AU</option>
                        <option value="+64">NZ</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="ContactNumber" value="@User?.ContactNumber" asp-for="UserInfo.ContactNumber" />
                </div>
            </div>

            <!-- Location -->
            <div class="form-group row mb-2">
                <label for="Location" class="col-md-4 col-form-label">Location</label>
                <div class="col-md-8">
                    <select class="form-select" id="Location" asp-for="UserInfo.Location">
                        <optgroup label="Australia">
                            <option value=""></option>
                            <option value="NSW">New South Wales</option>
                            <option value="VIC">Victoria</option>
                            <option value="QLD">Queensland</option>
                            <option value="SA">South Australia</option>
                            <option value="WA">Western Australia</option>
                            <option value="TAS">Tasmania</option>
                            <option value="ACT">Australian Capital Territory</option>
                            <option value="NT">Northern Territory</option>
                        </optgroup>
                        <optgroup label="New Zealand">
                            <option value="AUK">Auckland</option>
                            <option value="WGN">Wellington</option>
                            <option value="CAN">Canterbury</option>
                            <option value="OTA">Otago</option>
                            <option value="BOP">Bay of Plenty</option>
                            <option value="WKO">Waikato</option>
                            <option value="HKB">Hawke's Bay</option>
                            <option value="MWT">Manawatu-Wanganui</option>
                        </optgroup>
                    </select>
                </div>
            </div>

            <!-- Gender -->
            <div class="form-group row mb-2">
                <label for="Gender" class="col-md-4 col-form-label">Gender</label>
                <div class="col-md-8">
                    <select class="form-select" asp-for="UserInfo.Gender">
                        <option value=""></option>
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                        <option value="Other">Other</option>
                        <option value="NotSpecified">Do not wish to specify</option>
                    </select>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label for="MaritalStatus" class="col-md-4 col-form-label">Marital Status</label>
                <div class="col-md-8">
                    <select class="form-select" id="MaritalStatus" asp-for="UserInfo.MaritalStatus">
                        <option value=""></option>
                        <option value="Married">Married</option>
                        <option value="Unmarried">Single</option>
                    </select>
                </div>
            </div>

            <!-- Home Town -->
            <div class="form-group row mb-2">
                <label for="HomeTown" class="col-md-4 col-form-label">Home Town</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="HomeTown" asp-for="UserInfo.HomeTown" value="@User?.HomeTown" />
                </div>
            </div>

            <!-- House Name -->
            <div class="form-group row mb-2">
                <label for="HouseName" class="col-md-4 col-form-label">House Name</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="HouseName" asp-for="UserInfo.HouseName" value="@User?.HouseName" />
                </div>
            </div>
        </div>
    </div>
</div>
