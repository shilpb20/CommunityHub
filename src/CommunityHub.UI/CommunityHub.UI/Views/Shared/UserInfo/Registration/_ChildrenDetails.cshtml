 @model CommunityHub.Core.Dtos.RegistrationInfoCreateDto

@{
    var children = Model?.Children ?? new List<CommunityHub.Core.Dtos.ChildrenCreateDto>();
}
<div class="col-md-6">
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Children</h4>
            <button type="button" class="btn btn-primary" id="btnAddChild">Add Child</button>
        </div>

        <div class="card-body">
            <!-- Child Input Section (Initially Hidden) -->
            <div id="childInputSection" style="display: none;">
                <div class="form-group row mb-2 d-flex align-items-start">
                    <label for="childNameInput" class="col-md-3 col-form-label">Child's Name</label>

                    <!-- Child Name Input Field -->
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="childNameInput" />
                    </div>

                    <!-- Buttons -->
                    <div class="col-md-4 d-flex justify-content-end">
                        <button type="button" class="btn btn-success me-2" id="btnSaveChild">Save</button>
                        <button type="button" class="btn btn-secondary me-2" id="btnCancelChild">Cancel</button>
                    </div>
                </div>
            </div>

            <!-- Duplicate Error Message -->
            <div id="duplicateErrorMessage" class="alert alert-danger" style="display: none;">
                Child name has already been added!
            </div>

            <!-- List of Children -->
            <div id="childrenListSection">
                <ul id="childrenList" class="list-group mt-3">
                    @for (int i = 0; i < children.Count; i++)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@children[i].Name</span>

                            <!-- Hidden Input for Binding Each Child to Model -->
                            <input type="hidden" name="Children[@i].Name" value="@children[i].Name" />

                            <button type="button" class="btn btn-danger btn-sm btnDeleteChild">Delete</button>
                        </li>
                    }
                </ul>
            </div>

            <br />
            <div class="mt-2">
                <small data-bs-toggle="tooltip" data-bs-placement="top" title="Register separately as a Primary Member if your child is above 18" class="text-muted">
                    <i class="bi bi-info-circle"></i> Note: Register separately if your child is above 18
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/registrationForm.js"></script>
}