@model int

<!-- Rejection Modal -->
<div class="modal fade" id="rejectModal-@Model" tabindex="-1" aria-labelledby="rejectModalLabel-@Model" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel-@Model">Reject Registration Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("RejectRequest", "Admin")">
                    <!-- Hidden input for Request ID -->
                    <input type="hidden" name="id" value="@Model" />
                    <!-- Input for Reason for Rejection -->
                    <div class="mb-3">
                        <label for="comment-@Model" class="form-label">Reason for Rejection</label>
                        <textarea id="comment-@Model" name="comment" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
